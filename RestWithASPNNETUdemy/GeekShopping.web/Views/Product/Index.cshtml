@model IEnumerable<GeekShopping.web.Models.ProductModel>
 
<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">Products</h1>
        </div>
        <div class="col text-end pt-1">
            <a asp-action="ProductCreate" class="btn btn-outline-primary">
                <i class="fa fa-plus"></i> Create new product
            </a>
        </div>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Category</th>
                <th>Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.CategoryName</td>
                    <td>@((item.Price).ToString("c"))</td>
                    <td>
                        <a asp-action="ProductUpdate" class="btn btn-outline-success" asp-route-id="@item.Id"> 
                            <i class="fa fa-pen-to-square"></i>
                        </a>
                        <button type="submit" asp-action="ProductDelete" asp-route-id="@item.Id"
                        class="btn btn-outline-danger">
                            <i class="fa fa-trash-can"></i>
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>